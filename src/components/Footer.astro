---
const currentYear = new Date().getFullYear();
const links = [
  { href: '/', label: 'Home' },
  { href: '/services', label: 'Services' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];
---

<footer class="bg-navy text-white">
  <!-- Full-width thin gold border at top -->
  <div class="w-full h-px bg-gold/40"></div>

  <div class="max-w-6xl mx-auto px-4 md:px-8 py-16 md:py-20">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-12 md:gap-8">
      <!-- Brand with subtle gold glow -->
      <div class="footer-logo-glow">
        <img src="/logo.png" alt="Suite Manager LLC" class="h-10 w-auto brightness-0 invert opacity-90" />
        <p class="mt-4 text-white/60 text-sm leading-relaxed max-w-xs">
          Full-service hotel operations management for independent and boutique property owners.
        </p>
      </div>

      <!-- Nav Links -->
      <div>
        <h4 class="font-semibold text-sm uppercase tracking-wider text-white/40 mb-4">Navigation</h4>
        <ul class="space-y-3">
          {links.map(link => (
            <li>
              <a href={link.href} class="text-white/70 hover:text-gold transition-colors duration-200 text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h4 class="font-semibold text-sm uppercase tracking-wider text-white/40 mb-4">Get in Touch</h4>
        <ul class="space-y-3 text-sm">
          <li>
            <a href="mailto:hello@suitemanagerllc.com" class="text-white/70 hover:text-gold transition-colors duration-200">
              hello@suitemanagerllc.com
            </a>
          </li>
          <li class="text-white/70">
            <!-- Replace with real phone number -->
            (555) 000-0000
          </li>
        </ul>
      </div>
    </div>

    <!-- Bottom bar -->
    <div class="mt-16 pt-8 border-t border-white/10 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-white/40 text-sm">
        &copy; {currentYear} Suite Manager LLC. All rights reserved.
      </p>
      <p class="text-white/30 text-xs">
        Your Hotel. Expertly Managed.
      </p>
    </div>
  </div>
</footer>
